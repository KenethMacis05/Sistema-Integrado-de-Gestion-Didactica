                                Layouts
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseLayouts">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link esp-submenu-link" href="layout-static.html">Static Navigation</a>
                                    <a class="nav-link esp-submenu-link" href="layout-sidenav-light.html">Light Sidenav</a>
                                </nav>
                            </div>*@
                        <a class="nav-link esp-link esp-link-hover" href="@Url.Action("Matriz_de_Integracion", "Planificacion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Matriz de Integración
                        </a>
                        <a class="nav-link esp-link esp-link-hover" href="@Url.Action("Plan_Didactico_Semestral", "Planificacion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-bookmark"></i></div>
                            Plan Semestral
                        </a>
                        <a class="nav-link esp-link esp-link-hover" href="@Url.Action("Plan_de_Clases_Diario", "Planificacion")">
