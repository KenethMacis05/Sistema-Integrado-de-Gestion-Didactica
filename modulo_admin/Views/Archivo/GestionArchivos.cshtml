@section scripts{
    <script>
        // Animación de iconos al hacer hover
        document.querySelectorAll('.file-manager-group').forEach(card => {
            card.addEventListener('mouseenter', function () {
                this.querySelector('.fa-folder').classList.add('d-none');
                this.querySelector('.fa-folder-open').classList.remove('d-none');
            });
            card.addEventListener('mouseleave', function () {
                this.querySelector('.fa-folder-open').classList.add('d-none');
                this.querySelector('.fa-folder').classList.remove('d-none');
            });
        });
    </script>
}