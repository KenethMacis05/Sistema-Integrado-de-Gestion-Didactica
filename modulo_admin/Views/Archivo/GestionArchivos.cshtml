<!--Contenedor-->
<div class="card shadow-sm">
    <div class="card-header pb-0 border-bottom-0">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <!--Boton 1-->
            <li class="nav-item" role="presentation">
                <button class="nav-link active esp-link" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">
                    Archivos recientes
                </button>
            </li>
            <!--Boton 2-->
            <li class="nav-item" role="presentation">
                <button class="nav-link esp-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">
                    Todos
                </button>
            </li>
            <!--Boton 3-->
            <li class="nav-item" role="presentation">
                <button class="nav-link esp-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">
                    Eliminados
                </button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <!-- Contenedor 1-->
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Carpetas</h2>
                    <div>
                        <button type="button" class="btn btn-secondary" onclick="abrirModalCarpeta(null)">
                            <i class="fa fa-folder me-2"></i>Crear Carpeta
                        </button>
                        <button type="button" class="btn btn-primary" onclick="abrirModalSubirArchivo()">
                            <i class="fa fa-file me-2"></i>Subir Archivo
                        </button>
                    </div>
                </div>

                <hr />

                <!--Carpetas-->
                <div class="container-fluid mb-3">
                    <div class="row g-3" id="contenedor-carpetas">
                        <!-- Las carpetas se cargarán aquí dinámicamente -->
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Archivos</h2>
                </div>


                <hr>

                <!-- Archivos -->
                <div class="container-fluid">
                    <div class="row g-3">
                        <!-- Archivo 1 -->
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card file-manager-recent-item h-100 shadow-sm">
                                <div class="card-body">
