                                        <i class="fas fa-file-pdf fa-lg text-danger"></i>
                                        <div class="flex-fill">
                                            <a href="#" class="file-manager-recent-item-title text-decoration-none text-truncate d-block">design-components.pdf</a>
                                            <small class="text-muted">167kb • 09.14.21</small>
                                        </div>
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle file-manager-recent-file-actions text-dark" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="#"><i class="fas fa-share me-2"></i>Compartir</a></li>
                                                <li><a class="dropdown-item" href="#"><i class="fas fa-download me-2"></i>Descargar</a></li>
                                                <li><a class="dropdown-item" href="#"><i class="fas fa-folder me-2"></i>Mover</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Repetir para los demás archivos cambiando iconos y colores -->
                        <!-- Ejemplo Archivo 2 -->
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card file-manager-recent-item h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center gap-3">
                                        <i class="fas fa-file-code fa-lg text-primary"></i>
                                        <div class="flex-fill">
                                            <a href="#" class="file-manager-recent-item-title text-decoration-none text-truncate d-block">MainFragment.kt</a>
                                            <small class="text-muted">14kb • 09.03.21</small>
                                        </div>
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle file-manager-recent-file-actions text-dark" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="#"><i class="fas fa-share me-2"></i>Compartir</a></li>
                                                <li><a class="dropdown-item" href="#"><i class="fas fa-download me-2"></i>Descargar</a></li>
                                                <li><a class="dropdown-item" href="#"><i class="fas fa-folder me-2"></i>Mover</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Los demás archivos seguirían el mismo patrón -->
                    </div>
                </div>
            </div>

        </div>
        <!--Contenedor 2-->
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <h1>hOLA</h1>
        </div>
    </div>
</div>


<!-- Modal para crear una nueva carpeta-->
<div class="modal fade modal-lg" id="createCarpeta" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title" id="exampleModalLabel">Carpeta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">

                <input type="hidden" name="idCarpeta" id="idCarpeta" value="0">

                <div class="row mb-3">
                    <div class="input-group flex-nowrap">
                        <span class="input-group-text" id="addon-wrapping"><i class="fa fa-folder"></i></span>
                        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" aria-describedby="addon-wrapping" id="nombre">
                    </div>
                </div>

                <div class="modal-footer pe-0 ps-0 flex-nowrap ">
                    <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">
                        <i class="fas fa-times-circle me-2"></i>Cerrar
                    </button>
                    <button type="submit" style="background: #0072BB " onclick="GuardarCarpeta()" class="btn btn-success w-50">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para compartir carpeta -->
<div class="modal fade" id="modalCompartir" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-light" style="background-color: #0072BB">
                <h5 class="modal-title">Compartir Carpeta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="correoCompartir" placeholder="Ingrese el correo">
                </div>
                <div class="mb-3">
                    <label class="form-label">Permisos</label>
                    <select class="form-select" id="permisosCompartir">
                        <option value="lectura">Solo lectura</option>
                        <option value="edicion">Edición</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="compartirCarpeta()">Compartir</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        const config = {
            listarCarpetasUrl: '@Url.Action("ListarCarpetas", "Archivo")',
            guardarCarpetaUrl: '@Url.Action("GuardarCarpeta", "Archivo")',
            eliminarCarpetaUrl: '@Url.Action("EliminarCarpeta", "Archivo")',
            compartirCarpetaUrl: '@Url.Action("CompartirCarpeta", "Archivo")'
        };
    </script>
    <script src="@Url.Content("~/Scripts/Views/Archivos.js")" type="text/javascript"></script>
}